.or-search{width: 100%;background-color: #f0f0f0;height: 38px;line-height: 40px;padding: 5px 10px;box-sizing: border-box}
.or-search input{background-color: #fff;text-align: center;border-radius:8px;}


.top{
  Background: #F8F8F8; 
  width:100%;
  height: 80rpx;
  text-align: center;
  padding-top:10rpx;
}
.search{
  width:90%;  
  margin:0 auto;
  height: 60rpx;
  line-height: 60rpx;
  font-size:24rpx;  
  border-radius:20px;
  background-color: #fff;  
}
.search image{
  height:35rpx;
  width:40rpx;    
  vertical-align: middle;
  margin-right: 10rpx;
  position: absolute;
  left:230rpx;
  top:25rpx;
} 
.search input{
  display: inline-block;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;  
  padding-left:70rpx; 
  width: 80%; 
}


page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #e02e24;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #e02e24;
}



